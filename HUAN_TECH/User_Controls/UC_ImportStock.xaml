<UserControl x:Class="HUAN_TECH.User_Controls.UC_ImportStock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HUAN_TECH.User_Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel>
            <DatePicker Margin="2" materialDesign:HintAssist.Hint="Import Date" Width="150" Name="dpk_importdate" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
            <ComboBox Margin="2" Name="txt_groupname" materialDesign:HintAssist.Hint="Comodity Name" Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="150"/>
        </WrapPanel>
        
        <DataGrid IsReadOnly="True" Name="dtg_importstock" Grid.Row="1">
            
        </DataGrid>
    </Grid>
</UserControl>
