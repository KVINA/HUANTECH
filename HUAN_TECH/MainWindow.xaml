<Window x:Class="HUAN_TECH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HUAN_TECH"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="MenuItem" BasedOn="{x:Null}">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontWeight" Value="UltraLight" />
                <Setter Property="FontStretch" Value="UltraExpanded" />
                <Setter Property="Height" Value="28"/>
            </Style>

            <Style TargetType="Menu" BasedOn="{x:Null}">
                <Setter Property="Margin" Value="2"/>             
            </Style>

            <Style TargetType="TabItem" BasedOn="{x:Null}"/>

            <Style TargetType="TabControl" BasedOn="{x:Null}"/>

        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="_Hệ thống">
                <MenuItem Header="Danh sách menu" Click="MenuItem_Click"/>
                <MenuItem Header="Đăng xuất" Click="MenuItem_Click"/>
                <MenuItem Header="Thoát" Click="MenuItem_Click"/>
            </MenuItem>
            
            <MenuItem Header="_Khai báo">
                <MenuItem Tag="UC_CommodityGroup" Header="Danh mục nhóm hàng" Click="MenuItem_Click"/>
                <MenuItem Tag="UC_Commodity" Header="Danh mục hàng hóa" Click="MenuItem_Click"/>
                <MenuItem Header="Danh mục nhóm đối tác" Click="MenuItem_Click"/>
                <MenuItem Header="Danh mục đối tác" Click="MenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="_Thuộc tính hàng hóa">
                <MenuItem Header="Mẫu thành phẩm" Click="MenuItem_Click"/>
                <MenuItem Header="Hàng thành phẩm" Click="MenuItem_Click"/>
                <MenuItem Header="Hoa hồng hàng / dịch vụ" Click="MenuItem_Click"/>
                <MenuItem Header="Thời hạn sử dụng" Click="MenuItem_Click"/>
                <MenuItem Header="Thời hạn nhắc mua" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Name="tct_body" Margin="2"/>
    </Grid>
</Window>
